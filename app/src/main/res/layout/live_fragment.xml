<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/item_padding">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/email_live"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/name_live"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_live"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bday_live"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Birthday"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_live"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/gender_live"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Gender"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bday_live"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/school_live"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="School"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gender_live"/>
</androidx.constraintlayout.widget.ConstraintLayout>